{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "app.ts", 
    "models/**/*.ts", 
    "services/**/*.ts",
    "controllers/**/*.ts",
    "routes/**/*.ts",
    "utils/**/*.ts"
  ]
}